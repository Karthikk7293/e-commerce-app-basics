<section>
    <div class="container">
          <h2 class="font-weight-bold m-4">APPLE PRODUCTS</h2>



  <div class="row pb-5 mb-4">
      {{#each products}}
    <div class="col-lg-3 col-md-6 mb-4 mt-3 mb-lg-0">
      <!-- Card-->
      <div class="card rounded shadow border-0">
        <div class="card-body  p-4"><img width="100px" height="auto" src="/images/products/{{this._id}}.jpg" alt="" class="img-fluid d-block mx-auto mb-3">
          <h5> <a href="#" class="text-dark">{{this.product.name}} </a></h5>
          <p class="small text-muted font-italic">{{this.product.price}}</p>
          
        </div>
      </div>
    </div>
    {{/each}}

   

    

   
  </div>
    </div>
</section>