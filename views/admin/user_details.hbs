<section>
    <div class="container">
        <div class="row ">
            <div class="col-md-12 mt-4">
                <table class="table ">
                    <thead>
                        <tr>
                            <th><b></b></th>
                            <th><b></b></th>
                            <th><b>Name</b></th>
                            <th><b>Email</b></th>
                            <th><b>Phone Number</b></th>
                            <th><b></b></th>
                            <th><b></b></th>
                        </tr>
                    </thead>
                    <tbody class="tbody">
                        {{#each users}}
                        <tr >
                            <td  onchange="count(event)">{{@key}}</td>
                            <td><a href="" class="img"><img width="50px" height="auto" src="/images/products/{{this._id}}.jpg" alt=""></a></td>
                            <td>{{this.name}}</td>
                            <td>{{this.email}} </td>
                            <td>{{this.phone}} </td>
                            {{#if this.block}}
                            <td><a href="/admin/unblock-user/{{this._id}}" class="btn btn-danger">UnBlock</a></td>
                            {{else}}
                            <td><a href="/admin/block-user/{{this._id}}" class="btn btn-danger">Block</a></td>
                            {{/if}}
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

 